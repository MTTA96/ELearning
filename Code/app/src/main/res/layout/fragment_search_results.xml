<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical"
    tools:context="com.eways.elearning.Views.Fragment.SearchAndFilter.SearchFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Tutors list -->
            <LinearLayout
                android:id="@+id/tutor_search_result_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/elevation"
                android:orientation="vertical">

                <!-- Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Gia sư"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="bold|italic" />

                <!--Divider-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorScrim"  />

                <!-- List -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/tutor_search_results_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Load more -->
                <Button
                    android:id="@+id/button_load_more_tutor_search_results"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:text="Xem thêm"
                    android:textColor="@color/colorMain" />
            </LinearLayout>

            <!--Divider-->
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/colorScrim"   />

            <!-- Courses list -->
            <LinearLayout
                android:id="@+id/courses_search_result_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:elevation="@dimen/elevation"
                android:orientation="vertical">

                <!-- Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Khóa học"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="bold|italic" />

                <!--Divider-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorScrim" />

                <!-- List -->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/course_search_results_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Load more -->
                <Button
                    android:id="@+id/button_load_more_course_search_results"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:text="Xem thêm"
                    android:textColor="@color/colorMain" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
