<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.eways.elearning.View.Activity.MainActivity">
    <!--Tiêu đề-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_toolbar_height"
        android:background="@color/colorMain">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Tittle_Login"
            android:textSize="@dimen/Title_Login_Size"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/Title_Color" />
    </LinearLayout>

        <!--Nút đăng ký và đăng nhập Gmail và Facebook-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/ViewDangNhap_marginTop">
            <!--<com.facebook.login.widget.LoginButton-->
            <!--android:id="@+id/btnLoginFB"-->
            <!--android:layout_width="@dimen/btnLoginFB_width"-->
            <!--android:layout_height="@dimen/btnLoginFB_height"-->
            <!--android:paddingBottom="@dimen/btnLoginFB_paddingbottom"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_weight="1"/>-->

            <Button
                android:id="@+id/btnLoginFB"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ViewDangNhap_height"
                android:layout_weight="1"
                android:background="#0084ff"
                android:text="Facebook"
                android:textColor="#fffefe"
                android:visibility="gone"/>


            <com.google.android.gms.common.SignInButton
                android:id="@+id/btnLoginGmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ViewDangNhap_height"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/BtnDangNhap_marginLeft"/>
        </LinearLayout>


</LinearLayout>
