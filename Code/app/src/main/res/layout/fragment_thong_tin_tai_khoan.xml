<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eways.elearning.View.Fragment.TaiKhoan.ThongTinTaiKhoan.ThongTinCaNhanFragment">

    <!-- Action bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_toolbar_with_avatar_height"
        android:background="@color/colorMain"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/imageView_UserAvatar_ThongTinTaiKhoan"
            android:layout_width="@dimen/user_avatar_size"
            android:layout_height="@dimen/user_avatar_size"
            android:background="@drawable/avatar_shape" />
    </LinearLayout>

    <!-- Content -->
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_ThongTinTaiKhoan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:tabBackground="@drawable/tab_color_selector"
            app:tabSelectedTextColor="@color/White"
            app:tabGravity="fill"
            app:tabMode="fixed" />
    </android.support.v4.view.ViewPager>
</LinearLayout>
