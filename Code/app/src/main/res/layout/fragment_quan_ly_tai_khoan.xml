<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eways.elearning.View.Fragment.TaiKhoan.QuanLyTaiKhoanFragment">

    <!--Big toolbar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_toolbar_height"
        android:orientation="vertical"
        android:background="@color/colorMain">
        <ImageView
            android:id="@+id/ivAvatar_QLTK"
            android:layout_gravity="center"
            android:layout_width="@dimen/avarta_size_QLTK"
            android:layout_height="@dimen/avarta_size_QLTK"
            android:background="@drawable/avatar_shape"/>
        <TextView
            android:id="@+id/tvName_QLTK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elearning"
            android:textColor="@color/White"
            android:layout_marginTop="@dimen/InfoQLTK_margintop"
            android:layout_gravity="center"
            android:textSize="@dimen/ItemQLTK_textsize"/>
        <TextView
            android:id="@+id/tvEmail_QLTK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/EmailDangXuatQLTK_textsize"
            android:text="eways.elearning.com"
            android:textColor="@color/White"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!--Content-->
    <LinearLayout
        android:layout_marginTop="@dimen/ItemQLTK_margintop"
        android:layout_width="@dimen/layoutOption_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <!--Thông tin cá nhân-->
        <LinearLayout
            android:id="@+id/LoThongTinCaNhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/Icon_size"
                android:layout_height="@dimen/Icon_size"
                android:background="@android:drawable/btn_star_big_on" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/text_padding_left"
                android:gravity="center_vertical"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/ThongTinCaNhan"/>
        </LinearLayout>

        <!--Khóa học của tôi-->
        <LinearLayout
            android:id="@+id/LoKhoaHocCuaToi"
            android:layout_marginTop="@dimen/ItemQLTK_margintop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/Icon_size"
                android:layout_height="@dimen/Icon_size"
                android:background="@android:drawable/presence_away" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/text_padding_left"
                android:gravity="center_vertical"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/KhoaHocCuaToi"/>
        </LinearLayout>


        <!--Lĩnh vực quan tâm-->
        <LinearLayout
            android:id="@+id/LoLinhVucQuanTam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ItemQLTK_margintop">

            <ImageView
                android:layout_width="@dimen/Icon_size"
                android:layout_height="@dimen/Icon_size"
                android:background="@android:drawable/sym_def_app_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/text_padding_left"
                android:gravity="center_vertical"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/LinhVucQuanTam"/>
        </LinearLayout>

        <!--Đăng ký làm gia sư-->
        <LinearLayout
            android:id="@+id/LoCapNhatBangCap"
            android:layout_marginTop="@dimen/ItemQLTK_margintop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/Icon_size"
                android:layout_height="@dimen/Icon_size"
                android:background="@android:drawable/presence_video_busy" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/text_padding_left"
                android:gravity="center_vertical"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/dang_ky_lam_gia_su"/>
        </LinearLayout>


        <!--Devider-->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorDivider"
            android:layout_marginTop="@dimen/ItemQLTK_margintop"/>

        <!--Mời bạn bè-->
        <LinearLayout
            android:id="@+id/LoMoiBanBe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="@dimen/ItemQLTK_margintop">

            <ImageView
                android:layout_width="@dimen/Icon_size"
                android:layout_height="@dimen/Icon_size"
                android:background="@android:drawable/ic_lock_lock" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/text_padding_left"
                android:gravity="center_vertical"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/MoiBanBe"/>
        </LinearLayout>

        <!--Tài khoản khác-->
        <LinearLayout
            android:id="@+id/LoTaiKhoanKhac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/ItemQLTK_margintop">

            <ImageView
                android:layout_width="@dimen/Icon_size"
                android:layout_height="@dimen/Icon_size"
                android:background="@android:drawable/stat_sys_phone_call_forward" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/text_padding_left"
                android:gravity="center_vertical"
                android:textSize="@dimen/normal_text_size"
                android:text="@string/TaiKhoanKhac"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
