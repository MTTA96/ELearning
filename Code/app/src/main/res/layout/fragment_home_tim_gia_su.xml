<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eways.elearning.View.Fragment.Home.HomeTimGiaSu.HomeTimGiaSuFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayout_HomeTimGiaSu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Anh văn -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/horizontal_margin"
                    android:layout_marginRight="@dimen/horizontal_margin"
                    android:layout_marginTop="@dimen/home_danh_sach_khoa_hoc_vertical_margin"
                    android:background="@drawable/item_linh_vuc_home_shape"
                    android:elevation="@dimen/home_danh_sach_khoa_hoc_elevation"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/home_danh_sach_khoa_hoc_vertical_padding">
                    <!-- Title -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/home_danh_sach_khoa_hoc_vertical_padding"
                        android:paddingLeft="@dimen/home_title_danh_sach_khoa_hoc_horizontal_padding"
                        android:paddingRight="@dimen/home_title_danh_sach_khoa_hoc_horizontal_padding"
                        android:paddingTop="@dimen/home_danh_sach_khoa_hoc_vertical_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/White"
                            android:text="Anh Văn"
                            android:textSize="@dimen/normal_text_size"
                            android:textStyle="bold" />
                        <!-- Xem thêm -->
                        <TextView
                            android:id="@+id/textView_XemDanhSachKhoaHocAnhVan_HomeTimGiaSu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Xem thêm"
                            android:textColor="@color/colorMain" />
                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView_DanhSachKhoaHocAnhVan_HomeTimGiaSu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/White" />

                </LinearLayout>

                <!-- Toán -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/horizontal_margin"
                    android:layout_marginRight="@dimen/horizontal_margin"
                    android:layout_marginTop="@dimen/home_danh_sach_khoa_hoc_vertical_margin"
                    android:background="@drawable/item_linh_vuc_home_shape"
                    android:elevation="@dimen/home_danh_sach_khoa_hoc_elevation"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/home_danh_sach_khoa_hoc_vertical_padding">
                    <!-- Title -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/home_danh_sach_khoa_hoc_vertical_padding"
                        android:paddingLeft="@dimen/home_title_danh_sach_khoa_hoc_horizontal_padding"
                        android:paddingRight="@dimen/home_title_danh_sach_khoa_hoc_horizontal_padding"
                        android:paddingTop="@dimen/home_danh_sach_khoa_hoc_vertical_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/White"
                            android:text="Toán"
                            android:textSize="@dimen/normal_text_size"
                            android:textStyle="bold" />
                        <!-- Xem thêm -->
                        <TextView
                            android:id="@+id/textView_XemDanhSachKhoaHocToan_HomeTimGiaSu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Xem thêm"
                            android:textColor="@color/colorMain" />
                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView_DanhSachKhoaHocToan_HomeTimGiaSu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/White" />

                </LinearLayout>

                <!-- Khác -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/horizontal_margin"
                    android:layout_marginRight="@dimen/horizontal_margin"
                    android:layout_marginTop="@dimen/home_danh_sach_khoa_hoc_vertical_margin"
                    android:background="@drawable/item_linh_vuc_home_shape"
                    android:elevation="@dimen/home_danh_sach_khoa_hoc_elevation"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/home_danh_sach_khoa_hoc_vertical_padding">
                    <!-- Title -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/home_danh_sach_khoa_hoc_vertical_padding"
                        android:paddingLeft="@dimen/home_title_danh_sach_khoa_hoc_horizontal_padding"
                        android:paddingRight="@dimen/home_title_danh_sach_khoa_hoc_horizontal_padding"
                        android:paddingTop="@dimen/home_danh_sach_khoa_hoc_vertical_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/White"
                            android:text="Khác"
                            android:textSize="@dimen/normal_text_size"
                            android:textStyle="bold" />
                        <!-- Xem thêm -->
                        <TextView
                            android:id="@+id/textView_XemDanhSachKhoaHocKhac_HomeTimGiaSu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Xem thêm"
                            android:textColor="@color/colorMain" />
                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView_DanhSachKhoaHocKhac_HomeTimGiaSu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/White" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>
