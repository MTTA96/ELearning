<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/horizontal_padding"
    android:background="@color/white">

    <!--Title-->
    <Spinner
        android:id="@+id/spinner_ChonLinhVucChuyenMon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toán"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="bold" />

    <!--Nút thêm bằng cấp-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Bằng cấp"
            android:textStyle="bold"
            android:textSize="@dimen/normal_text_size"/>
        <!-- Thêm -->
        <Button
            android:id="@+id/button_ThemBangCapLinhVucChuyenMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/white"
            android:text="Thêm"
            android:textAllCaps="false" />
    </LinearLayout>
    <!--Danh sách bằng cấp-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_DanhSachBangCap_ThemLinhVucChuyenMon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>


    <!--Nút thêm môn-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Môn"
            android:textStyle="bold"
            android:textSize="@dimen/normal_text_size"/>
        <!-- Thêm -->
        <Button
            android:id="@+id/button_ThemMonLinhVucChuyenMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/white"
            android:text="Thêm"
            android:textAllCaps="false" />
    </LinearLayout>
    <!--Danh sách môn-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_DanhSachMon_ThemLinhVucChuyenMon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

</LinearLayout>
